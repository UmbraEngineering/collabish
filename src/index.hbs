<head>

	<title>Collabish</title>

	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, maximum-scale=1.0" />

	<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,700,300,400,600,800" />
	<link rel="stylesheet" type="text/css" href="//{{ static }}/css/app{{#if production}}.min{{/if}}.css" />

</head>
<body>

	<div id="wrapper"></div>

	<script src="//{{ static }}/build{{#if production}}.min{{/if}}.js"></script>

	<script>

		window.History = {options: {html4Mode: true}};

		// Add the /lib directory to the require path
		require.paths.push('/lib', '/vendor');

		// Load in underscore
		var _ = require('cloak/underscore');

		var io = require('socket.io');
		var config = require('cloak').config;
		var socketUrl = location.protocol + {{#if production}}'//api.collabish.me'{{else}}'//localhost:3000'{{/if}};

		config.socket = io.connect(socketUrl);
		config.modelStore = require('cloak/model-stores/dagger');
		config.viewTag = 'section';

		// Polyfill JSON if needed
		JSON || require('json2');

		// Load in any cloak mods
		require('mods/templates');

		// Tell the router to start listening...
		var MainRouter = require('routers/main');
		
		var router = new MainRouter({ autoStart: false })
			.use(require('routers/welcome'))
			.start();

	</script>

</body>
