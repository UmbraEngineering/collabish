<h1>Search</h1>
<div class="row">
	<div class="panel">
		<form>
			<label class="query">
				<input type="text" />
			</label>
			
			<hr />
			
			<label class="tags">
				Tags
				{{!-- TagEditorView --}}
			</label>
			<label class="tags-type">
				Tagging Type
				<div>
					<input type="radio" name="tags-type" value="any" checked /> Any
					<input type="radio" name="tags-type" value="all" /> All
				</div>
			</label>

			<hr />

			<label class="adult-content">
				Adult Content
				<div>
					<input type="radio" name="adult-content" value="yes" /> Yes
					<input type="radio" name="adult-content" value="no" checked /> No
					<input type="radio" name="adult-content" value="either" /> Either
				</div>
			</label>

			<hr />

			<div class="row dates">
				<div class="small-12 medium-6 columns">
					<label class="created">
						Create
						<select>
							<option value="any" selected>Any Time</option>
							<option value="today">Today</option>
							<option value="week">Past Week</option>
							<option value="month">Past Month</option>
						</select>
					</label>
				</div>
				<div class="small-12 medium-6 columns">
					<label class="updated">
						Updated
						<select>
							<option value="any" selected>Any Time</option>
							<option value="today">Today</option>
							<option value="week">Past Week</option>
							<option value="month">Past Month</option>
						</select>
					</label>
				</div>
			</div>

			<hr />

			<div class="button-wrapper">
				<button class="expand action button">{{icon "search"}} Search</button>
			</div>
		</form>
	</div>
</div>